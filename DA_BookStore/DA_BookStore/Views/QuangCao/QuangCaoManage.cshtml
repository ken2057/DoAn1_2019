

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <!-- Optional theme -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">
    <!-- Latest compiled and minified JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
    <meta charset="utf-8">
    <link href="@Url.Content("~/Content/quangcao.css")" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
    <title>Quản lý quảng cáo</title>
</head>
<body>
    <section class="main-screen">
        <div class="container home-inner">
            <section class="testimonials wrapper">
                <div class="row">
                    <div class="col-md-6">
                        <div class="row">
                            <div class="col-md-6">
                                <h3>Quảng cáo</h3>
                            </div>
                            <div class="col-md-3" style="margin-top:15px;">
                                <a href="~/QuangCao/AddQuangCao"><button class="btn btn-danger" type="submit">Thêm quảng cáo</button></a>
                            </div>
                        </div>
                    </div>
                </div>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            @*<td>Mã quảng cáo</td>*@
                            <th>Tên quảng cáo</th>
                            <th>File hình</th>
                            <th>Ngày bắt đầu</th>
                            <th>Ngày kết thúc</th>
                            <th>Loại quảng cáo</th>
                            <th>Vị trí</th>
                            <th>Thao tác</th>
                        </tr>

                    <tbody>

                        @foreach (var item in ViewBag.DsQC)
                        {
                        <tr>

                            <td>@item.TenQC</td>
                            <td><a href="~/@item.HinhQC" style="display:block; text-decoration:none;">@item.HinhQC</a></td>
                            <td>@item.NgayBatDauQC</td>
                            <td>@item.NgayHetQC</td>
                            <td>@item.LoaiQC</td>
                            <td>@item.ViTriQuangCao</td>
                            <td>
                                <a href="~/QuangCao/QCDetail?id=@item.MaQuangCao">Sửa</a>
                                <a href="~/QuangCao/QCDelete/@item.MaQuangCao">Xóa</a>
                            </td>

                        </tr>
                        }

                    </tbody>
                </table>
            </section>
        </div>
    </section>
</body>
</html>